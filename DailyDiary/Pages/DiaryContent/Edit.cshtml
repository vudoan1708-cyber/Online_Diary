@page
@model DailyDiary.Pages.DiaryContent.EditModel

@{
    ViewData["Title"] = "Edit Content";
}

<br />

<h2 class="text-info">Edit</h2>


<div class="border container" style="padding: 30px;">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="EditedDiary.ID" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        @*Title*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditedDiary.Title"></label>
            </div>

            <div class="col-6">
                <input asp-for="EditedDiary.Title" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="EditedDiary.Title"></span>
        </div>

        @*Content*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditedDiary.Content"></label>
            </div>

            <div class="col-6">
                <textarea asp-for="EditedDiary.Content" class="form-control"></textarea>
            </div>
            <span class="text-danger" asp-validation-for="EditedDiary.Content"></span>
        </div>

        @*Image*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="UpdatedPhoto">Image</label>
            </div>

            <div class="col-6">
                <input type="file" accept="image/*" asp-for="UpdatedPhoto" class="form-control" />
            </div>
        </div>

        @*Author*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditedDiary.Author"></label>
            </div>

            <div class="col-6">
                <input asp-for="EditedDiary.Author" class="form-control" />
            </div>
        </div>

        @*Date*@
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="EditedDiary.Date"></label>
            </div>

            <div class="col-6">
                <input asp-for="EditedDiary.Date" class="form-control" />
            </div>
        </div>

        @*Buttons*@
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control text-white" />
            </div>

            <div class="col-3">
                <a class="btn btn-danger text-white form-control" asp-page="Index">Back to Diary</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}